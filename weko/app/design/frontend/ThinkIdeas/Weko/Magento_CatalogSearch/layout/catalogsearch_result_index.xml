<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="search_result_list">
            <container name="category.product.list.additional" as="additional" />
        </referenceContainer>
        <referenceBlock name="searchindex.result">
            <block class="Magento\Framework\View\Element\Template" name="display_search_box" as="display.search.box"
                   template="Magento_Search::no_result.phtml" >
            </block>
        </referenceBlock>
        <referenceBlock name="search.no_results" remove="true" />
    </body>
</page>
