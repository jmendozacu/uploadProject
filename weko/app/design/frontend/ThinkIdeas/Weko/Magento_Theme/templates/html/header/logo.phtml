<script type="text/javascript">
require(['jquery'], function($) {
    jQuery(document).ready(function() {

        /** Sticky topmenu*/
        jQuery(window).scroll(function(){
           if (jQuery(this).scrollTop() > 110) {
                jQuery('body').addClass('stickyyyy');
            } 
            else {
                $('body').removeClass('stickyyyy');
            }
            
            if ($(this).scrollTop() > 175) {
               $('body').addClass('slideDown');
            } 
            else {
               $('body').removeClass('slideDown');
            }

        });

        jQuery(".menu-body").hover(function(){
            jQuery('.menu-body').each(function(i, obj) {
                jQuery(this).css("display","none");
            }); 
        })

        jQuery(".navigation .level0.parent").hover(function(){
            console.log(jQuery(this).find(".menu-body").attr("class"));
            jQuery('.menu-body').each(function(i, obj) {
                jQuery(this).css("display","none");
            });
            jQuery(this).find(".menu-body").css("display","block");

        },function(e){ 
            jQuery(jQuery(this).children(".menu-body").css("display","none"));
        });
    });
});
</script>
