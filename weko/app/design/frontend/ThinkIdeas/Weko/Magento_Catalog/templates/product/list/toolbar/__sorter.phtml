                </option>
                <option class="<?php echo $_key.'_high'; ?>" value="<?php echo 'price&product_list_dir=desc' ?>"
                    <?php if ($block->getCurrentDirection() == 'desc' && $block->isOrderCurrent($_key)): ?>
                        selected="selected"
                    <?php endif; ?>
                ><?php echo $block->escapeHtml(__('PRICE: HIGH TO LOW')) ?>
                </option>
                <?php
            }
            else{
                ?>
                <option class="<?php echo $_key; ?>" value="<?php /* @escapeNotVerified */ echo $_key; ?>"
                    <?php if ($block->isOrderCurrent($_key)): ?>
