<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="aw_bannerslider_widget" class="ThinkIdeas\Bannerslider\Block\Widget\Banner">
        <label translate="true">Banner Slider</label>
        <description translate="true">Contents of a Banner Slider</description>
        <parameters>
            <parameter name="banner_id" xsi:type="block" required="true" visible="true">
                <label translate="true">Banner</label>
                <block class="ThinkIdeas\Bannerslider\Block\Adminhtml\Banner\Widget\Chooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string" translate="true">Select Banner...</item>
                        </item>
                    </data>
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>